<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.every">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/every_logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="LockedOrientationActivity"
        tools:replace="android:icon">

        <activity
            android:name=".view.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
        <activity
            android:name=".view.signin.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.signup.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.signup.signup.data.Email_PwSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.signup.signup.data.Name_BirthSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.signup.signup.data.PhoneSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.signup.signup.data.SchoolSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.signup.signup.data.SchoolListSignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SchoolListDialog" />
        <activity
            android:name=".view.signup.signup.data.WorkerSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.signup.signup.data.SignUpFinishActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.student.StudentMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.student.fragment.home.StudentHomeFragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.student.fragment.bamboo.StudentBambooFragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.student.activity.bamboo.BambooPostActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.student.activity.bamboo.BambooCommentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.student.activity.bamboo.BambooMoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BambooMoreDialog" />
        <activity
            android:name=".view.student.activity.bamboo.BambooCommentEditActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".view.student.fragment.more.StudentMoreFragment"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.student.fragment.schedule.StudentScheduleFragment"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.student.activity.more.StudentUpdateActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/UpdateDialog" />

        <activity android:name=".view.student.activity.more.StudentAccountActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.student.activity.schedule.ScheduleEditActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.student.activity.schedule.ScheduleContentActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.student.activity.schedule.SchedulePostActivity"
                  android:screenOrientation="portrait"/>

    </application>

</manifest>