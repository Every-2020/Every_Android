<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.every" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/every_logo"
        tools:replace="android:icon"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"
        android:usesCleartextTraffic="true"
        android:screenOrientation="portrait"
        tools:ignore="LockedOrientationActivity">

        <activity android:name=".view.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.signin.SignInActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".view.signup.SignUpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.signup.signup.data.Email_PasswordSignUpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.signup.signup.data.Name_BirthSignUpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.signup.signup.data.PhoneSignUpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.signup.signup.data.SchoolSignUpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.signup.signup.data.SchoolListSignUpActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/SchoolDialog"/>
        <activity android:name=".view.signup.signup.data.WorkerSignUpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.signup.signup.data.SignUpFinishActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.student.activity.StudentMainActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.student.fragment.home.StudentHomeFragment"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.student.fragment.bamboo.StudentBambooFragment"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.student.activity.bamboo.BambooPostActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.student.activity.bamboo.BambooCommentActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.student.activity.bamboo.BambooMoreActivity"
                  android:theme="@style/BambooMoreDialog"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.student.activity.bamboo.BambooCommentEditActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:screenOrientation="portrait"/>

        <!--아직 미사용 -->
        <activity android:name=".view.student.fragment.StudentMoreFragment" />
        <activity android:name=".view.student.fragment.StudentScheduleFragment" />

    </application>
</manifest>