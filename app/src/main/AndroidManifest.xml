<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.every">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/every_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.signup.signup.data.SchoolListActivity" android:theme="@style/Dialog"/>
        <activity android:name=".activity.signup.signup.data.SchoolActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.signup.signup.data.PhoneActivity"/>
        <activity android:name=".activity.signup.signup.data.Name_BirthActivity" />
        <activity android:name=".activity.signup.signup.data.Email_PasswordActivity"/>
        <activity android:name=".activity.signup.SignUpActivity" />
        <activity android:name=".activity.signin.SignInActivity" />
        <activity android:name=".activity.splash.SplashActivity"/>
        <activity android:name=".activity.MainActivity"/>
    </application>
</manifest>